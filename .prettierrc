{
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 4,
    "useTabs": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "tabWidth": 4,
                "useTabs": true,
                "trailingComma": "none"
            }
        },
        {
            "files": "*.md",
            "options": {
                "tabWidth": 1,
                "printWidth": 100,
                "singleQuote": false
            }
        }
    ]
}
